# =============================================================================
# Kids Athletics Club - Environment Configuration
# =============================================================================
# Copy this file to .env (development) or .env.production (production)
# and update with your actual values
#
# IMPORTANT: Never commit .env or .env.production files to version control!
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kids_athletics
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production!
# You can use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application URL (used for CORS and links)
BASE_URL=http://localhost:5000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Session Configuration (milliseconds)
# SESSION_TIMEOUT: 30 minutes = 1800000ms
# REMEMBER_ME_DURATION: 7 days = 604800000ms
SESSION_TIMEOUT=1800000
REMEMBER_ME_DURATION=604800000

# Logging
LOG_LEVEL=info
