{
  "name": "kids-athletics-club-server",
  "version": "1.0.0",
  "description": "Backend server for Kids Athletics Club application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run postbuild",
    "postbuild": "cd .. && git add server/dist/ && git diff --cached --quiet -- server/dist || git commit --only --no-verify -m \"chore: update compiled server files\" -- server/dist",
    "start": "node dist/index.js",
    "db:init": "psql -U $DB_USER -d $DB_NAME -f ../schema.sql",
    "db:backup": "bash ./scripts/backup-db.sh",
    "db:reset": "bash ./scripts/reset-db.sh",
    "db:check": "node ./scripts/db-check.mjs",
    "db:migrate:all": "node ./run-migrations.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  }
}
